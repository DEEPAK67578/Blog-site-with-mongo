<%- include('includes/head', {title:'Updating Post'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('includes/header' ) %>
    <h1>Update Post</h1>
    <main>
        <form action="/posts/<%= posts._id %>/edit" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= posts.title %>">
            </div>
            <div class="form-control">
                <label for="summary">Summary</label>
                <input type="text" name="summary" id="summary" required maxlength="255"  value="<%= posts.summary %>">
            </div>
            <div class="form-control">
                <label for="content">Post Content</label>
                <textarea name="content" id="content"><%= posts.content %></textarea>
            </div>
            <div class="form-control">
                <label for="author">Select Authors</label>
                <select name="author" id="author">
                    <option value="<%= posts.author.id %>"> <%= posts.author.name %> </option>
            </select>
            </div>
            <button class="btn">Update Post</button>
        </form>
    </main>
    
</body>
</html>
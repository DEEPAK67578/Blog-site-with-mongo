<%- include('includes/head', {title:'View Post'}) %>
<link rel="stylesheet" href="/styles/posts.css">
</head>
<body>
  <%- include('includes/header' ) %>
    <% include('includes/header') %>
    <main id="post-detail">
       <h1><%= posts.title %></h1>
       <section id="post-meta">
        <address>
            <a href="mailto: <%= posts.author.email %>"><%= posts.author.name %></a>
        </address> | <time <%= posts.date %>><%= posts.humanReadableDate %></time>
       </section>
      <hr>
      <section>
        <div id="body"> 
          <p><%= posts.content %></p>
          <p><%= posts.summary %></p>
        </div>
      </section>
    </main>
</body>
</html>